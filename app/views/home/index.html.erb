<h1>Home Page</h1>
<div>
  <%if signed_in?%>
    Hello! You logged with email: <%=current_user.email%>
  <%end%>
  <br><br>

  <%if @enrollments.size != 0%>
  <h3>The courses you have registered:</h3>
  <table>
    <thead>
      <tr>
        <th>Student email</th>
        <th>Course code</th>
        <th>Course name</th>
        <th>Subject</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @enrollments.each do |enrollment| %>
        <% if enrollment.email == current_user.email %>
          <tr>
            <td><%= enrollment.email %></td>
            <td><%= enrollment.course_code %></td>
            <td><%= enrollment.course_name %></td>
            <td><%= enrollment.subject_id %></td>
            <td><%= link_to 'Show', enrollment %></td>
            <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
            <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%end%>
</div>
